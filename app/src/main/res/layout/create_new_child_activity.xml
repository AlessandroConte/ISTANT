<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_50sdp"
    tools:context=".UserFragment"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="221dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_children"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="30dp"
                android:text="DATI NUOVO FIGLIO"
                android:textSize="30dp"
                android:layout_marginTop="@dimen/_25sdp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/fragmentChild_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxWidth="100dp"
                        android:text="@string/fragmentuser_textview_name"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/fragmentChild_edittext_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:maxWidth="100dp"
                        android:enabled="true"
                        android:gravity="center"
                        android:inputType="textPersonName"
                        android:text=""
                        android:visibility="visible"
                        tools:ignore="SpeakableTextPresentCheck" />

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/fragmentChild_surname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxWidth="100dp"
                        android:text="@string/fragmentuser_textview_surname"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/fragmentChild_edittext_surname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:maxWidth="100dp"
                        android:enabled="true"
                        android:gravity="center"
                        android:inputType="textPersonName"
                        android:text="" />

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/fragmentChild_gender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxWidth="100dp"
                        android:text="@string/fragmentuser_textview_gender"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <RadioGroup
                        android:id="@+id/fragmentChild_radiogroup_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <RadioButton
                            android:id="@+id/fragmentChild_genderradiobutton_m"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="true"
                            android:maxWidth="100dp"
                            android:text="@string/fragmentuser_genderradiobutton_m" />

                        <RadioButton
                            android:id="@+id/fragmentChild_genderradiobutton_f"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="true"
                            android:maxWidth="100dp"
                            android:text="@string/fragmentuser_genderradiobutton_f" />

                    </RadioGroup>
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/fragmentChild_dateofbirth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxWidth="100dp"
                        android:text="@string/fragmentuser_textview_dateofbirth"
                        android:textAlignment="center"
                        android:enabled="true"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/fragmentChild_edittext_dateofbirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:maxWidth="100dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:inputType="date" />


                </TableRow>

            </TableLayout>


            <Button
                android:id="@+id/fragmentChild_buttonCreate"
                android:layout_width="387dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="@string/createNewLoan_buttontext_create"
                android:textAlignment="center"/>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>