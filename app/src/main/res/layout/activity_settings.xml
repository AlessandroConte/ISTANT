<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/settings_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="150dp"
                android:text="@string/settings_textview_name"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/settings_edittext_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/settings_surname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="150dp"
                android:text="@string/settings_textview_surname"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/settings_edittext_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/settings_phonenumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="150dp"
                android:text="@string/settings_textview_phonenumber"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/settings_edittext_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|phone"
                android:text="" />

        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/settings_fiscalcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="150dp"
                android:text="@string/settings_textview_fiscalcode"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/settings_edittext_fiscalcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/settings_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="150dp"
                android:text="@string/settings_textview_address"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/settings_edittext_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/settings_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="150dp"
                android:text="@string/settings_textview_email"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/settings_edittext_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/settings_gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="150dp"
                android:text="@string/settings_textview_gender"
                android:textAlignment="center"
                android:textSize="20sp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/settings_genderradiobutton_m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_genderradiobutton_m" />

                <RadioButton
                    android:id="@+id/settings_genderradiobutton_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_genderradiobutton_f" />

            </RadioGroup>
        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/settings_dateofbirth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="150dp"
                android:text="@string/settings_textview_dateofbirth"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />


        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>

            <Button
                android:id="@+id/settings_buttonSave"
                android:layout_width="251dp"
                android:layout_height="wrap_content"
                android:text="@string/settings_buttonSave" />

        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>

            <Button
                android:id="@+id/settings_buttonManageChildren"
                android:layout_width="251dp"
                android:layout_height="wrap_content"
                android:text="@string/settings_buttonManageChildren" />

        </TableRow>


    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>